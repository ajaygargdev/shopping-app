<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Application</title>
  <link rel="stylesheet" href="/styles/style.css"> 
</head>

<body>
  <%- include('../partials/header') %>
  <div class="container">
    <h1>Product List</h1>
    <a href="/products/new">Add New Product</a>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach((product)=> { %>
          <tr>
            <td>
              <%= product.name %>
            </td>
            <td>
              <%= product.description %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              <%= product.quantity %>
            </td>
            <td><img src="<%= product.image %>" class="product-image" style="max-width: 200px;"
                alt="<%= product.name %>" class="product-img"></td>
            <td>
              <a href="/products/edit/<%= product._id %>" class="edit-btn">Edit</a>
              <form action="/api/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
		<% if (locals.error) { %>
			<div class="container">
				<p class="error-message">
					<%= locals.error %>
				</p>
			</div> <!-- Display error message if exists -->
			<% } %>
  </div>
</body>

</html>